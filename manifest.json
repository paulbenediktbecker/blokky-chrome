{
    "manifest_version": 3,
    "version": "0.0.3",
    "name": "Blokky Chrome",
    "action": {
      "default_title": "Blokky Settings"
    },
    "background": {
      "service_worker": "js/background.js",
      "type": "module"
    },
    "permissions": ["storage", "activeTab", "tabs", "alarms"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [{
      "resources": ["block/block.html", "config/config.html"],
      "matches": ["<all_urls>"]
    }]
  }